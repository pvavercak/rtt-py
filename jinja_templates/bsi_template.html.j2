<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BSI results for {{ tested_file }}</title>
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="stylesheet" href="../css/bsi_styles.css">
</head>
<body class="bsi">
    <h3>Input file: {{ tested_file }}</h3>
    {% for res in list_of_results:%}
    {% if res.has_error %}
    <div class="bsi-error">
    {% elif res.result_value > 0 %}
    <div class="bsi-failed">
    {% else %}
    <div class="bsi-passed">
    {% endif %}
        <h4 class="bsi">Test: {{ res.test_name }}</h4>
        <table class="bsi">
            <tr class="bsi">
                <th class="bsi">Error</th>
                <td class="bsi">{{ res.has_error }}</td>
            </tr>
            <tr class="bsi">
                <th class="bsi">Failed runs</th>
                <td class="bsi">{{ res.result_value }}</td>
            </tr>
            <tr class="bsi">
                <th class="bsi">Runs</th>
                <td class="bsi">{{ res.num_runs }}</td>
            </tr>
        </table>
    </div>
    {% endfor %}
</body>
</html>